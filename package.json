{
  "name": "2k-music-desktop",
  "version": "1.0.0",
  "description": "2k Music Desktop - Your personal music streaming platform",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "electron": "set NODE_ENV=development&& set ELECTRON_IS_DEV=1&& electron .",
    "electron-dev": "concurrently \"npm run dev --prefix Frontend\" \"wait-on http://localhost:3000 && set NODE_ENV=development&& set ELECTRON_IS_DEV=1&& electron .\"",
    "electron-pack": "npm run build --prefix Frontend && electron-builder",
    "build": "npm run build --prefix Frontend",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-win": "npm run build && electron-builder --win",
    "dist-linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.2kmusic.desktop",
    "productName": "2k Music",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "Frontend/out/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      "assets/2kmusic_equalizer.exe"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg",
      "icon": "Frontend/public/256.ico"
    },
    "win": {
      "target": "nsis",
      "icon": "Frontend/public/256.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "Frontend/public/256.ico",
      "category": "Audio"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "installer-script.nsh",
      "installerHeaderIcon": "Frontend/public/256.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "2K Music"
    }
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "concurrently": "^9.1.0",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "chokidar": "^4.0.3",
    "music-metadata": "^11.9.0",
    "react-window": "^2.2.0",
    "resend": "^6.1.3",
    "ts-node": "^10.9.2"
  }
}
